echo -e "${BLUE}--------------------- ${RED}Äâ±¤â‚³J ${BLUE}-----------------------${NOCOLOR}"
sleep 0.5
echo -e "${GREEN}Join our Telegram channel for updates:${NOCOLOR} ${BLUE}https://t.me/+6dw6gTPZu0FiOGRl${NOCOLOR}"
sleep 0.5

# Loading Dots Animation
loading_dots() {
    while :; do
        echo -ne "\r${YELLOW}Loading   ${NOCOLOR}"
        sleep 0.5
        echo -ne "\r${YELLOW}Loading.  ${NOCOLOR}"
        sleep 0.5
        echo -ne "\r${YELLOW}Loading.. ${NOCOLOR}"
        sleep 0.5
        echo -ne "\r${YELLOW}Loading...${NOCOLOR}"
        sleep 0.5
    done
}

# Run the loading dots animation in the background
loading_dots &
DOTS_PID=$!

# Simulate a task
sleep 5

# Stop the loading dots animation
kill $DOTS_PID
wait $DOTS_PID 2>/dev/null

echo -e "${GREEN}Task completed!${NOCOLOR}"
