#!/bin/bash

# Coloring
NOCOLOR='\033[0m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
WHITE='\033[1;37m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
BOLD='\033[1m'

# Dynamic Banner Animation
banner() {
    clear
    for i in {1..3}; do
        echo -e "${BOLD}${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${NOCOLOR}"
        sleep 0.2
        clear
        echo -e "${BOLD}${YELLOW}🌸${RED}ꗥ～${YELLOW}🌸${RED}ꗥ～${YELLOW}🌸${RED}ꗥ～${YELLOW}🌸${RED}ꗥ～${YELLOW}🌸${RED}ꗥ～${YELLOW}🌸${RED}ꗥ～${YELLOW}🌸${RED}ꗥ～${YELLOW}🌸${RED}ꗥ～${YELLOW}🌸${NOCOLOR}"
        sleep 0.2
    done
    clear
    echo -e "${BOLD}${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${NOCOLOR}"
    echo -e "${RED}●░█▀█░█░█░█▀▄░█▀▀░░░░░█▀█░█▀█░█▀▀░▀█▀░█▀▀░█▀▄"
    echo -e "${WHITE} ░█▀▀░█░█░█▀▄░█░█░▄▄▄░█▀▀░█▀█░▀▀█░░█░░█▀▀░█▀▄"
    echo -e "${GREEN} ░▀░░░▀▀▀░▀▀░░▀▀▀░░░░░▀░░░▀░▀░▀▀▀░░▀░░▀▀▀░▀ ▀●"
    echo -e "${BOLD}${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${YELLOW}ꗥ～${RED}🌸${NOCOLOR}"
}

# Call the banner function
banner

echo -e "${BLUE}--------------------- ${RED}ĐⱤ₳J ${BLUE}-----------------------${NOCOLOR}"
sleep 0.5
echo -e "${GREEN}Join our Telegram channel for updates:${NOCOLOR} ${BLUE}https://t.me/+6dw6gTPZu0FiOGRl${NOCOLOR}"
sleep 0.5

# Loading Dots Animation
loading_dots() {
    while :; do
        echo -ne "\r${YELLOW}Loading   ${NOCOLOR}"
        sleep 0.5
        echo -ne "\r${YELLOW}Loading.  ${NOCOLOR}"
        sleep 0.5
        echo -ne "\r${YELLOW}Loading.. ${NOCOLOR}"
        sleep 0.5
        echo -ne "\r${YELLOW}Loading...${NOCOLOR}"
        sleep 0.5
    done
}

# Run the loading dots animation in the background
loading_dots &
DOTS_PID=$!

# Simulate a task
sleep 5

# Stop the loading dots animation
kill $DOTS_PID
wait $DOTS_PID 2>/dev/null

echo -e "${GREEN}Task completed!${NOCOLOR}"
